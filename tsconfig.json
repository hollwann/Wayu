{
    "compilerOptions": {
        "resolveJsonModule": true,
        "target": "es5",
        "module": "commonjs",
        "lib": ["DOM", "ES2016", "ES2019"],
        "allowJs": false,
        "sourceMap": true,
        "outDir": "./build",
        "removeComments": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "."
    },
    "include": ["src/**/*.ts"],
    "compileOnSave": true,
    "exclude": ["./node_modules", "**/__tests__/*", "./lib"],
    "type": "module",
    "paths": {
        "*": ["*"],
        "models": ["./models/*"]
    },
    "typeRoots": ["node_modules/@types", "src/@types"],
    "ts-node": {
        "files": true
    }
}
